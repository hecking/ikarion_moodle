<header class="ui menu">
  <%= link_to "Home", root_path, class: "active item" %>
  <%= link_to "About", about_path, class: "item" %>
  <% if logged_in? %>
    <%= link_to "Profile", current_user, class: "item" %>
    <%= link_to "Logout", logout_path, method: :delete, class: "item right" %>
  <% else %>
    <%= link_to "Sign Up", signup_path, class: "item" %>
    <%= link_to "Login", login_path, class: "item right" %>
  <% end %>
</header>